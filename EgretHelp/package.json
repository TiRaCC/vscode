{
	"name": "EgretHelp",
	"displayName": "EgretHelp",
	"description": "帮助工具",
	"publisher": "TiRa",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:HelpTools.CreateNewClass",
		"onCommand:HelpTools.CreateNewSkinClass",
		"onCommand:HelpTools.setAuthor",
		"onCommand:HelpTools.setProject",
		"onCommand:HelpTools.contrastExml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "HelpTools.CreateNewClass",
				"title": "NewClass"
			},
			{
				"command": "HelpTools.CreateNewSkinClass",
				"title": "NewSkinClass"
			},
			{
				"command": "HelpTools.setAuthor",
				"title": "setAuthor"
			},
			{
				"command": "HelpTools.setProject",
				"title": "setProject"
			},
			{
				"command": "HelpTools.contrastExml",
				"title": "contrastExml"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceExtname == ''",
					"command": "HelpTools.CreateNewClass",
					"group": "navigation"
				},
				{
					"when": "resourceExtname == ''",
					"command": "HelpTools.CreateNewSkinClass",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"xml2js": "^0.4.23"
	}
}
